<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#363636</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#FFDE16</item>
        <item name="android:background">#444444</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PreviewBG" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#777</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textInput" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#363636</item>
        <item name="android:background">#ddd</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">15sp</item>
    </style>



</resources>
